# =============================================================================
# Forentis AI — Environment Configuration
# =============================================================================
# Copy to .env and adjust values for your environment.

# --- Application ---
APP_NAME=Forentis AI
APP_ENV=local
APP_VERSION=0.1.0
LOG_LEVEL=INFO

# --- Database ---
POSTGRES_USER=forentis
POSTGRES_PASSWORD=forentis
POSTGRES_DB=forentis
DATABASE_URL=postgresql+psycopg://forentis:forentis@localhost:5499/forentis

# --- Security ---
TENANT_SALT=change-me
FERNET_KEY=replace-with-base64-urlsafe-32-byte-key
SECRET_KEY=change-me-in-production
STORAGE_MODE=strict
VAULT_ADDR=

# --- Port Assignments (3847–3854 reserved) ---
PORT_FRONTEND=3847
PORT_API=3848
PORT_POSTGRES=5499
PORT_REDIS=3850
PORT_MINIO_API=3851
PORT_MINIO_CONSOLE=3852
PORT_MAILPIT_SMTP=3853
PORT_MAILPIT_UI=3854

# --- Service URLs (derived from ports above) ---
REDIS_URL=redis://localhost:3850/0
MINIO_URL=http://localhost:3851
SMTP_HOST=localhost
SMTP_PORT=3853

# --- LLM (governance-gated, off by default) ---
LLM_ASSIST_ENABLED=false
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_TIMEOUT_S=60

# --- Upload ---
PII_MASKING_ENABLED=true
UPLOAD_MAX_FILE_SIZE_MB=100
UPLOAD_MAX_TOTAL_SIZE_MB=500
